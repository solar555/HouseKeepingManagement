<!--简历信息-->
<view class="jianli-box">
    <view class="touxiang">
      <image src="{{item.avatar_url}}"></image>
    </view>
    <view class="xinxi1">
      <!-- <image wx.if="{{sex == 1}}" src="/images/nv.png"></image> -->
      <image wx:if="{{item.sex == 2}}" src="/images/nv.png"></image>
      <text>{{item.name}}</text>
    </view>
    <view class="xinxi2">
      <text>{{item.age}}岁</text>
      <text>|</text>
      <text>{{item.native_place_province_name!=null ? item.native_place_province_name:"无"}}</text>
    </view>
    <view class="xinxi3">
      <text>工作类型：{{item.type_name}}</text>
    </view>
    <view class="xinxi3">
      <text>工资：{{item.salary_range_type_name}}元/月</text>
    </view>
    <view class="xian"></view>
    <view class="biaoqian">
      <text wx:for="{{item.v_housekeeping_worker_characteristic}}" 
            wx:key="id"
            data-index="{{index}}"
            >{{item.sys_dic_name}}</text>
    </view>
    <view class="fanx-btn">
      <text class="btn">转发分享</text>
    </view>
</view>
<!-- 推荐服务员 -->
<!-- 推荐服务员栏目标题 -->
  <view class="tj">
    <text class="shuxian"></text>
    <text class="shuxianbiaoti">推荐服务员</text>
  </view>
   <!-- 推荐服务员栏目列表 -->
  <view class="tuijian" 
        wx:for="{{prolList}}" 
        data-index="{{index}}" 
        data-id="{{item.id}}" 
        bindtap="toDatail" 
        wx:key="id">
      <view class="tuijian-img">
        <image src="{{item.avatar_url}}"></image>
      </view>
      <view class="tuijian-xinxi">
        <view class="tiele">
          <text>{{item.name}}</text>
          <text>{{item.age}}</text>
        </view>
        <view class="biaoqian">
            <text wx:for="{{item.v_housekeeping_worker_characteristic}}" wx:key="{{index}}">{{item.sys_dic_name}}</text>
        </view>
        <view class="dizhi">
            <text>{{item.current_city_name}}</text>
            <text>|</text>
            <text>{{item.education_background_type_name}}</text>
        </view>
      </view>
      <view class="tuijian-btn">
        <button size="mini" type="primary">预约</button>
      </view>
  </view>
<!-- 底部按钮 -->
<view class="fooder-btn">
  <text class="tel-btn">电话咨询</text>
  <text class="yuyue-btn" bindtap="yuYueXinXi">预约此服务员</text>
</view>
