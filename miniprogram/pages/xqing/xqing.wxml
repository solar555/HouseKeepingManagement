    <text class="shuxian"></text>
    <text class="shuxianbiaoti">推荐服务员</text>
  </view>
   <!-- 推荐服务员栏目列表 -->
  <view class="tuijian" wx:for="{{prolList}}" data-index="{{index}}" bindtap="toDatail">
      <view class="tuijian-img">
        <image src="{{item.touxiang}}"></image>
      </view>
      <view class="tuijian-xinxi">
        <view class="tiele">
          <text>{{item.name}}</text>
          <text>{{item.age}}</text>
        </view>
        <view class="biaoqian">
            <text wx:for="{{item.biaoqian}}">{{item}}</text>
        </view>
        <view class="dizhi">
            <text>{{item.dizhi}}</text>
            <text>|</text>
            <text>{{item.xueli}}</text>
        </view>
      </view>
      <view class="tuijian-btn">
        <button size="mini" type="primary">预约</button>
      </view>
  </view>
