<!--pages/xinxi/xinxi.wxml-->
<view class="fenlei">
  <van-cell-group>
        <van-field label="姓名" value="{{housekeeping_worker.name}}" left-icon="manager"/>
        <van-field label="电话" value="{{housekeeping_worker.phone}}" left-icon="phone"/>
        <van-field label="所在城市" value="{{housekeeping_worker.current_city_name}}" left-icon="location"/>
        <van-field label="服务类型" value="{{housekeeping_worker.type_name}}" left-icon="invition"/>
    </van-cell-group>
</view>

<view class="fenlei">
  <van-cell-group>
    <picker mode="date" 
            value="{{item.date_start}}" 
            start="2000-01-01" 
            end="2999-01-01" 
            bindchange="bindDateStartChange">
        <van-field label="开始时间:" value="{{item.date_start}}" left-icon="invition"/>
    </picker>

    <picker mode="date" 
            value="{{item.date_end}}" 
            start="2000-01-01" 
            end="2999-01-01" 
            bindchange="bindDateEndChange">
        <van-field label="结束时间:" value="{{item.date_end}}" left-icon="invition"/>
    </picker>
  </van-cell-group>
</view>
<view class="fenlei">
  <van-cell-group>
        <van-field label="其他需求" 
                   bindinput="inputChange" 
                   data-name="item.remark"
                   value="{{item.remark}}" 
                   left-icon="goods-collect" 
                   border="{{ false }}"/>
    </van-cell-group>

    <!-- <input type="text" data-name="item.remark" value="{{item.remark}}" bindinput="inputChange" /> -->
</view>
<view class="btn-yuyue">
  <text bindtap="onSubmit">立即预约</text>
</view>

